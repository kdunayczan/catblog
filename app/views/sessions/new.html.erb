<h1 class="center">Log In</h1>
<h2 class="center">Fill out form to log in</h2>
<br/><br/>
<div class="styles border form-jumbotron">
<br/><br/>
  <div class="row form-text">
    <div class="col-xs-12">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= f.submit "Log In", class: 'btn btn-default btn-lg' %>
            <%= link_to 'Sign Up', signup_path, class: "btn btn-default btn-lg"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br/>
<br/><br/>


