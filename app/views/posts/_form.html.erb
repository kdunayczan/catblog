<div class="styles border form-jumbotron">
  <% if @post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul class="alert-danger">
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-text">
    <div class="col-xs-12">
      <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Title of Post", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, class: "form-control", placeholder: "Description of Post", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :body %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :body, rows: 15, class: "form-control", placeholder: "Body of Post", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-10">
            <%= f.submit class: 'btn btn-default brn-lg' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
