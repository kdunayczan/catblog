<ul>
  <% @blogs.each do |blog| %>
    <li>
      <div><%= blog.title %></div>
      <div><%= blog.description %></div>
      <div>
        <%= link_to 'Edit', edit_blog_path(blog) %> |
        <%= link_to 'Show Full Blog', blog_path(blog) %> |
        <%= link_to 'Delete', blog_path(blog), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </li>
  <% end %>
</ul>
