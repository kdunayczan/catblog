<div>
  <% @blogs.each do |blog| %>
    <div class="list-jumbotron">
      <h3><%= blog.title %></h3>
      <p><%= blog.description %></p>
      <br/>
      <div class="blog-actions">
        <%= link_to 'Read', blog_path(blog), class: "btn btn-xs btn-success" %>
        <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Delete', blog_path(blog),
                              method: :delete, data: {confirm: "Are you sure?"},
                              class: "btn btn-xs btn-danger" %>
      </div>
    </div>
  <% end %>
</div>


