<h1>Bloggy Blogs</h1>
<hr>
<%= link_to image_tag('home.svg', width: '40'), root_path %>
<%= link_to image_tag('about.svg', width: '40'), about_path %>
<%= link_to image_tag('new.png', width: '40'), controller: "blogs", action: "new" %>
<hr>
<br/>
<h2>Add New Blog</h2>

<%= form_for @blog do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
