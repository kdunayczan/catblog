<h1>Bloggy Blogs</h1>
<hr>
<div>
  <%= link_to image_tag('home.svg', width: '40'), blogs_path %>
  <%= link_to image_tag('about.svg', width: '40'), about_path %>
  <%= link_to image_tag('new.png', width: '40'), controller: "blogs", action: "new" %>
</div>
<hr>
<br/>
<h2>Edit Blog</h2>

<% if @blog.errors.any? %>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blog do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to image_tag('goback.png', width: '40'), blogs_path %>

